<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recommend_rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="13dp"
                android:text="이 상품 어때요?"
                android:textAppearance="@style/MainFontM"
                android:textStyle="bold"
                android:textColor="@color/main_text"
                android:textSize="17sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recommend_rv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginBottom="45dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_color"
                android:paddingVertical="35dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#00000000">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="13dp"
                        android:text="이벤트 소식"
                        android:textAppearance="@style/MainFontM"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_recommend_event1" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_recommend_event2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_recommend_event3"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="13dp"
                android:text="알뜰 상품"
                android:textAppearance="@style/MainFontM"
                android:textStyle="bold"
                android:textColor="@color/main_text"
                android:textSize="17sp" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recommend_rv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginBottom="45dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner_ad_1"
                android:background="#00000000"/>
        </LinearLayout>




    </ScrollView>




</LinearLayout>