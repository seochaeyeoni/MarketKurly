<?xml version="1.0" encoding="utf-8"?>
<com.example.marketkurly.src.pay.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:clickable="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/coupon_select"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/radio_btn"
            android:button="@null"/>

        <TextView
            android:id="@+id/coupon_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="15000"
            android:textAppearance="@style/MainFontM"
            android:textColor="@color/main_text"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/coupon_discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="원 할인"
            android:textAppearance="@style/MainFontL"
            android:textStyle="bold"
            android:textColor="@color/main_text"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center_vertical"
        android:text="[쿠폰 이름] 쿠폰 내용"
        android:textAppearance="@style/MainFontL"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/coupon_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginVertical="7dp"
        android:layout_gravity="center_vertical"
        android:text="쿠폰 내용"
        android:textAppearance="@style/MainFontM"
        android:textColor="@color/tab_unselected_text"
        android:textSize="10sp"  />
    <TextView
        android:id="@+id/coupon_expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center_vertical"
        android:text="만료일자"
        android:textAppearance="@style/MainFontM"
        android:textColor="@color/tab_unselected_text"
        android:textSize="10sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_line" />

</com.example.marketkurly.src.pay.CheckableLinearLayout>